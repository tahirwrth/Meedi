<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background (not-yet-progressed area, dark and translucent) -->
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#80000000"/> <!-- Dark translucent color -->
            <corners android:radius="5dp"/>   <!-- Rounded edges -->
        </shape>
    </item>

    <!-- Progressed area (white) -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="#FFFFFF"/> <!-- White progress bar -->
                <corners android:radius="5dp"/>  <!-- Rounded edges -->
            </shape>
        </clip>
    </item>
</layer-list>
